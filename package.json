{
  "name": "@vpmedia/phaser-example",
  "version": "1.0.0",
  "description": "Example for the @vpmedia/phaser package",
  "author": "Andras Csizmadia <andras@vpmedia.hu> (www.vpmedia.hu)",
  "license": "MIT",
  "homepage": "https://github.com/vpmedia/phaser-example#readme",
  "bugs": {
    "url": "https://github.com/vpmedia/phaser-example/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vpmedia/phaser-example.git"
  },
  "type": "module",
  "main": "src/index.html",
  "scripts": {
    "asset": "phixify all --config-file ./.phixify.json",
    "build": "vite build --emptyOutDir",
    "check": "pnpm lint && pnpm test && pnpm typecheck",
    "format": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json,css}\"",
    "lint": "eslint \"**/*.{js,jsx}\"",
    "preview": "vite preview --open",
    "start": "vite --open",
    "stylelint": "stylelint \"**/*.css\" --ignore-path .gitignore",
    "test": "vitest --coverage --pass-with-no-tests",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@vpmedia/phaser": "^1.101.0",
    "@vpmedia/simplify": "^1.71.0",
    "fontfaceobserver": "^2.3.0",
    "spectorjs": "^0.9.30"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^10.0.1",
    "@types/fontfaceobserver": "^2.1.3",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vpmedia/phixify": "^2.2.0",
    "eslint": "^10.0.0",
    "eslint-plugin-jsdoc": "^62.5.4",
    "eslint-plugin-oxlint": "^1.46.0",
    "eslint-plugin-unicorn": "^63.0.0",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "oxlint": "^1.46.0",
    "oxlint-tsgolint": "^0.11.5",
    "prettier": "^3.8.1",
    "stylelint": "^17.2.0",
    "stylelint-config-standard": "^40.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "8.0.0-beta.11",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "overrides": {
      "vite": "8.0.0-beta.11"
    }
  }
}
