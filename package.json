{
  "name": "@vpmedia/phaser-example",
  "version": "1.0.0",
  "description": "Example for the @vpmedia/phaser package",
  "author": "Andras Csizmadia <andras@vpmedia.hu> (www.vpmedia.hu)",
  "license": "MIT",
  "homepage": "https://github.com/vpmedia/phaser-example#readme",
  "bugs": {
    "url": "https://github.com/vpmedia/phaser-example/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vpmedia/phaser-example.git"
  },
  "type": "module",
  "main": "src/index.html",
  "scripts": {
    "asset": "phixify all --config-file ./.phixify.json",
    "start": "vite --open",
    "build": "vite build --emptyOutDir",
    "preview": "vite preview --open",
    "lint": "eslint \"**/*.{js,jsx}\"",
    "stylelint": "stylelint \"**/*.css\" --ignore-path .gitignore",
    "typecheck": "tsc",
    "format": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json,md,css}\"",
    "test": "vitest --coverage --pass-with-no-tests"
  },
  "dependencies": {
    "@types/node": "^24.7.2",
    "@vpmedia/phaser": "^1.85.0",
    "@vpmedia/simplify": "^1.40.0",
    "fontfaceobserver": "^2.3.0",
    "spectorjs": "^0.9.30"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/fontfaceobserver": "^2.1.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vpmedia/phixify": "^2.1.0",
    "eslint": "^9.37.0",
    "eslint-plugin-jsdoc": "^61.1.4",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vitest": "^3.2.4"
  },
  "browserslist": [
    "> 0.5%",
    "not dead",
    "not op_mini all",
    "iOS >= 14"
  ]
}
