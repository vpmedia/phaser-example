{
  "name": "@vpmedia/phaser-example",
  "version": "1.0.0",
  "description": "Example for the @vpmedia/phaser package",
  "author": "Andras Csizmadia <andras@vpmedia.hu> (www.vpmedia.hu)",
  "license": "MIT",
  "homepage": "https://github.com/vpmedia/phaser-example#readme",
  "bugs": {
    "url": "https://github.com/vpmedia/phaser-example/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vpmedia/phaser-example.git"
  },
  "type": "module",
  "main": "src/index.html",
  "scripts": {
    "asset": "phixify all --config-file ./.phixify.json",
    "build": "vite build --emptyOutDir",
    "check": "pnpm lint && pnpm test && pnpm typecheck",
    "format": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json,css}\"",
    "lint": "eslint \"**/*.{js,jsx}\"",
    "preview": "vite preview --open",
    "start": "vite --open",
    "stylelint": "stylelint \"**/*.css\" --ignore-path .gitignore",
    "test": "vitest --coverage --pass-with-no-tests",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@vpmedia/phaser": "^1.100.0",
    "@vpmedia/simplify": "^1.62.0",
    "fontfaceobserver": "^2.3.0",
    "spectorjs": "^0.9.30"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@types/fontfaceobserver": "^2.1.3",
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^4.0.17",
    "@vpmedia/phixify": "^2.2.0",
    "eslint": "^9.39.2",
    "eslint-plugin-jsdoc": "^62.1.0",
    "eslint-plugin-oxlint": "^1.39.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "oxlint": "^1.39.0",
    "oxlint-tsgolint": "^0.11.1",
    "prettier": "^3.8.0",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "8.0.0-beta.8",
    "vitest": "^4.0.17"
  },
  "browserslist": [
    "> 0.5%",
    "not dead",
    "not op_mini all",
    "iOS >= 14"
  ]
}
