{
  "name": "@vpmedia/phaser-example",
  "version": "1.0.0",
  "description": "Example for the @vpmedia/phaser package",
  "author": "Andras Csizmadia <andras@vpmedia.hu> (www.vpmedia.hu)",
  "license": "MIT",
  "homepage": "https://github.com/vpmedia/phaser-example#readme",
  "bugs": {
    "url": "https://github.com/vpmedia/phaser-example/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vpmedia/phaser-example.git"
  },
  "type": "module",
  "main": "src/index.html",
  "scripts": {
    "asset": "phixify all --config-file ./.phixify.json",
    "start": "vite --open",
    "build": "vite build --emptyOutDir",
    "preview": "vite preview --open",
    "lint": "eslint \"**/*.{js,jsx}\"",
    "lint-fix": "eslint --fix \"**/*.{js,jsx}\"",
    "stylelint": "stylelint \"**/*.css\"",
    "typecheck": "tsc",
    "format": "prettier --write \"**/*.{css,js,jsx,json,md}\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@vpmedia/phaser": "^1.30.0",
    "fontfaceobserver": "^2.3.0",
    "spectorjs": "^0.9.29"
  },
  "devDependencies": {
    "@types/fontfaceobserver": "^2.1.0",
    "@vpmedia/phixify": "^1.4.0",
    "eslint": "^8.45.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-jsdoc": "^46.4.4",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "stylelint": "^15.10.1",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.4"
  },
  "engines": {
    "npm": ">=9.0.0",
    "node": ">=19.0.0"
  }
}
