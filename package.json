  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vpmedia/phaser-example.git"
  },
  "type": "module",
  "main": "src/index.html",
  "scripts": {
    "asset": "phixify all --config-file ./.phixify.json",
    "start": "vite --open",
    "build": "vite build --emptyOutDir",
    "preview": "vite preview --open",
    "lint": "eslint \"**/*.{js,jsx}\"",
    "stylelint": "stylelint \"**/*.css\"",
    "typecheck": "tsc",
    "format": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json,md,css}\"",
    "test": "echo \"Warning: no test specified\" && exit 0",
    "lefthook:install": "lefthook install",
    "lefthook:uninstall": "lefthook uninstall"
  },
  "dependencies": {
    "@vpmedia/phaser": "^1.43.0",
    "fontfaceobserver": "^2.3.0",
    "spectorjs": "^0.9.30"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@jest/globals": "^29.7.0",
    "@types/fontfaceobserver": "^2.1.3",
    "@types/jest": "^29.5.12",
    "@vpmedia/phixify": "^2.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsdoc": "^48.2.3",
    "eslint-plugin-unicorn": "^52.0.0",
    "globals": "^15.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lefthook": "^1.6.10",
    "prettier": "^3.2.5",
    "stylelint": "^16.5.0",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.11"
  },
  "browserslist": [
    "> 0.5%",
    "not dead",
    "not op_mini all"
  ],
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=18.0.0"
  }
